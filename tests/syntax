s00007			[⌽b(⎡⎤,)]						[@b(,)]
s00008			[⌽b(())]						[@b({()})]
s00009			[⌽b(⎡)⎤)]						[@b({)})]

s0n001			[⌽b(⌽c())]						[@b({@c()})]
sbn001			[⌽b❪⌽c❪❫❫]						[@b({@c()})]

