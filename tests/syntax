// Definition.
// U name	minparms	maxparms	stripping
// stripping (11 = strip newlines and tabs,trim parameters of newlines and tabs) cr: ␍ tab:␉

# Defines (lexical tests)
// U wtag6		1	1	11	⌽wt(oooooo⍟1)
//U wtag5		1	1	11	⌽wt(ooooo⍟1)
//U wtag4		1	1	11	⌽wt(oooo⍟1)
//U wtag3		1	1	11	⌽wt(ooo⍟1)
//U wtag2		1	1	11	⌽wt(oo⍟1)
//U wtag1		1	1	11	⌽wt(o⍟1)
//U wtag0		1	1	11	⌽wt(⍟1)

U a		0	1	00	[⍟1]
U r		0	1	00	[crlf]
U a		0	1	00	[⍟1]
U zv	0	1	00	␉[⍟1]␉
U zp	0	1	01	␉[⍟1]␉
U zs	0	1	10	␉[⍟1]␉
U zb	0	1	11	␉[⍟1]␉

// cr/crlf tests
U	xcr		0	0	00	␍
U	xcrlf	0	0	00	␍␊

// some typical xml markup macros.
U wt		1	1	11	<⍟1>
U wtago		1	1	11	⌽wt(/⍟1)
U wtagi		1	2	10	⌽wt(⍟1⍟2)
U wtag		2	3	00	⌽wtagi(⍟1,⍟2)⍟3⌽wtago(⍟1)
U wstag		1	2	00	⌽wt(⍟1⍟2 /)
U wa		1	2	01	 ⍟1="⍟2"

// Outside of a macro definition, these should return as strings.
U p01		1	1	11	⍟(i)
U p02		1	1	11	⍟1
U p03		1	1	11	⍟1120P
U p04		1	1	11	-⍟(1+)-
U p05		1	1	11	⍟(i),⍟(k),⍟(n)
U p06		1	1	11	⍟(j)
U p07		1	1	11	⍟(k.2)
U p08		1	1	11	⍟(p)
U p09		1	1	11	⍟(ps)
U p10		1	1	11	⍟^(k-3)


# Tests
m00001			⌽a(teen)						[teen]
m00002			[⌽wa(foo,bar)]					[ foo="bar"]
m00003			[⌽wtagi(bog,blob)]				[<bogblob>]
m00010			⌽wtag(bog,⌽wa(foo,bar),hi)		<bog foo="bar">hi</bog>

