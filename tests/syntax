s00003			[⌽wi(teen)⌽w()]					[@wi({teen})@w()]
s00004			[⌽we_33()]						[@we_33()]

sb0001			EX⌽wibble_33❪teen,foy❫PO		EX@wibble_33({teen},{foy})PO
sb0002			EX⌽wibble_33❪teen❫PO			EX@wibble_33({teen})PO
sb0003			[⌽wi❪teen❫⌽w❪❫]					[@wi({teen})@w()]
sb0004			[⌽we_33❪❫]						[@we_33()]

